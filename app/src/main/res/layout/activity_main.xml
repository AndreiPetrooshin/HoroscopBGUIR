<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.example.draqo.horoscopbguir.MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textToday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp"
                tools:text="Гороскоп на: " />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/ovenImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/oven" />

                <TextView
                    android:id="@+id/ovenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/telecImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/telec" />

                <TextView
                    android:id="@+id/telecText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/blizneciImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/blizneci" />

                <TextView
                    android:id="@+id/blizneciText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/rakImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/rak" />

                <TextView
                    android:id="@+id/rakText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/levImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/lev" />

                <TextView
                    android:id="@+id/levText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/devaImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/deva" />

                <TextView
                    android:id="@+id/devaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/vesiImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/vesi" />

                <TextView
                    android:id="@+id/vesiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/scorpionImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/scorpion" />

                <TextView
                    android:id="@+id/scorpionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/sctrelecImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/sctrelec" />

                <TextView
                    android:id="@+id/sctrelecText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/kozerogImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/kozerog" />

                <TextView
                    android:id="@+id/kozerogText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/vodoleiImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/vodolei" />

                <TextView
                    android:id="@+id/vodoleiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/ribiImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ribi" />

                <TextView
                    android:id="@+id/ribiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#bebebe" />
            </TableRow>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
